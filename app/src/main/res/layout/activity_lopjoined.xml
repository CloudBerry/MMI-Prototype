<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="mmi_prototype.app.Lopjoined">


    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true" android:id="@+id/linearLayout2">
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="NYE LØP"
                android:id="@+id/button3" android:layout_weight="1" android:background="#ccc"
                android:textColor="#ffffff"/>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="MINE LØP"
                android:id="@+id/button4" android:layout_weight="1" android:textColor="#ffffff"
                android:background="#54a6ff"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NTNU 10 KM"
            android:id="@+id/textView19"
            android:layout_below="@+id/linearLayout2" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="10dp" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mandag 5. Mars"
            android:id="@+id/textView20"
            android:layout_marginLeft="49dp" android:layout_below="@+id/textView19"
            android:layout_alignLeft="@+id/textView19" android:layout_alignStart="@+id/textView19"
            android:layout_marginStart="49dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="5000 Skritt"
              android:id="@+id/textView21" android:layout_marginTop="21dp"
              android:layout_below="@+id/textView20" android:layout_alignLeft="@+id/textView20"
              android:layout_alignStart="@+id/textView20"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="3 dager igjen"
              android:id="@+id/textView22"
              android:layout_marginTop="29dp" android:layout_below="@+id/textView21"
              android:layout_alignLeft="@+id/textView21" android:layout_alignStart="@+id/textView21"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Lett"
              android:id="@+id/textView23"
              android:layout_centerVertical="true" android:layout_alignLeft="@+id/textView22"
              android:layout_alignStart="@+id/textView22"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_below="@+id/textView23"
            android:layout_marginTop="37dp" android:layout_alignLeft="@+id/textView19"
            android:layout_alignStart="@+id/textView19" android:max="100" android:indeterminate="false"
            android:progress="30"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1483"
            android:id="@+id/textView24"
            android:layout_below="@+id/progressBar" android:layout_toLeftOf="@+id/scoreboardbtn"
            android:layout_toStartOf="@+id/scoreboardbtn"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5000"
            android:id="@+id/textView25" android:layout_below="@+id/progressBar" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scoreboard >"
            android:id="@+id/scoreboardbtn" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp" android:textColor="#FFF" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trekk Deg"
            android:id="@+id/trekkbutton" android:layout_alignBottom="@+id/textView20"
            android:layout_toRightOf="@+id/scoreboardbtn" android:layout_toEndOf="@+id/scoreboardbtn" android:textColor="#fff"
            android:background="#f00"/>


</RelativeLayout>
